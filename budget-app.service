[Unit]
Description=装修预算表管理系统
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/opt/budget-app
Environment="PATH=/opt/budget-app/venv/bin"
ExecStart=/opt/budget-app/venv/bin/gunicorn --config gunicorn_config.py wsgi:app
Restart=always
RestartSec=10

# 安全设置
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/budget-app/uploads /opt/budget-app/exports

[Install]
WantedBy=multi-user.target

